page,.root{
  height: 100%;
  width: 100%;
  background-color: #f5f5f5;
  float: left;
}
.login_wrap{
  width: 88%;
  /* padding: 10px 0;  */
  box-sizing: border-box;
  margin:200rpx auto 0 auto;
  border-radius: 10rpx;
  overflow: hidden;
}
.input_item{
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-bottom: 1rpx solid #f5f5f5;
  background-color: rgba(255,255,255,0.8);
}
.input_item input{
  height: 100%;
  width: 100%;
  font-size: 28rpx;
  padding:0 20rpx;
  box-sizing: border-box;
}
.tip{
  width: 100%;
  height: 40rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  margin-top: 10rpx;
  color: #666;
  /* text-indent: 12rpx; */
}
.btn_wrap{
  margin-top: 30rpx;
}
.btn_wrap view{
  background-color: rgba(255,255,255,0.8);
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  color: #333;
  margin-top: 20rpx;
  border-radius: 6rpx;
  font-size: 30rpx;
}
.btn_wrap view:first-child{
  background-color: rgba(0, 158, 229, 0.7);
  color: #fff;
}
.test{
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  color: #999;
}