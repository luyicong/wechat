<!--index.wxml-->
<view class="wrap">
  <!--banner-->
  <swiper indicator-dots="{{indicatorDots}}" indicator-color="{{indicatColor}}" indicator-active-color="{{indicatotActiveColor}}"
    autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" circular="true">
    <block wx:for="{{imgUrls}}" wx:key="{{item}}">
      <swiper-item>
        <image src="{{item}}" class="slide-image" width="100%" height="150"/>
      </swiper-item>
    </block>
  </swiper>
  <!--分类导航-->
  <view class="cate_wrap">
    <view wx:for="{{cates}}" wx:key="{{item.id}}" wx:for-item="item" class="cate_item" id="{{item.id}}" bindtap='bindViewTap'>
      <view class='bg'></view>
      <text>{{item.id}}</text>
    </view>
  </view>
</view>