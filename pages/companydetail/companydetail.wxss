page,.root{
  width: 100%;
  min-height: 100%;
  background-color: #f5f5f5;
}
.cd_header{
  width: 100%;
  height: 300rpx;
}
.haeder_top{
  height: 120rpx;
  position: relative;
  background: -webkit-linear-gradient(-270deg, rgba(0, 158, 229,0.5), rgba(0, 158, 229,1)); /* Safari 5.1 - 6.0 */
  background: -o-linear-gradient(-270deg, rgba(0, 158, 229,0.5), rgba(0, 158, 229,1)); /* Opera 11.1 - 12.0 */
  background: -moz-linear-gradient(-270deg, rgba(0, 158, 229,0.5), rgba(0, 158, 229,1)); /* Firefox 3.6 - 15 */
  background: linear-gradient(-270deg, rgba(0, 158, 229,0.5), rgba(0, 158, 229,1)); /* 标准的语法（必须放在最后） */
}
.logo{
  border-radius: 60rpx;
  overflow: hidden;
  position: absolute;
  left:50%;
  top: 60rpx;
  margin-left: -60rpx;
}
.header_bottom{
  width: 100%;
  height: 120rpx;
  padding-top: 60rpx;
  text-align: center;
  background: #fff;
}
.name{
  font-size: 32rpx;
}
.tags{
  font-size: 26rpx;
  height: 50rpx;
  line-height: 50rpx;
  color: #999;
}
.tags text{
  margin-right: 10rpx;
}
.common_content_moudle{
  width: 100%;
  background: #fff;
  margin-top: 30rpx;
  overflow: hidden;
}
.item_title{
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid #f5f5f5;
  font-size: 30rpx;
  text-indent: 20rpx;
}
.item_content{
  overflow: hidden;
  padding-bottom: 20rpx;
}
.text_item{
  height: 56rpx;
  line-height: 56rpx;
  padding-left: 20rpx;
  font-size: 28rpx;
}
.text_item_name{
  color: #666;
}
.text_item_value{
  color: #333;
}
.company_desc{
  overflow: hidden;
  font-size: 26rpx;
  line-height: 60rpx;
  padding:20rpx 20rpx 0 20rpx;
}
.list_item{
  display: flex;
  display: -webkit-flex;
  height: 146rpx;
  background-color: #fff;
  border-bottom: 1px solid #eee;
  padding:12rpx 15rpx;
  box-sizing: border-box;
}
.left{
  flex: 3;
}
.left>view{
  height: 46rpx;
  line-height: 46rpx;
  font-size:26rpx;
}
.left .title{
  /* font-weight: 600; */
  color: #000;
  font-size: 28rpx;
}
.left .tags,.com{
  color: #666;
}
.salary{
  margin-right: 10rpx;
  color: #ff552e;
}
.right{
  flex: 1;
  font-size: 24rpx;
}
.time{
  height: 66rpx;
  line-height: 66rpx;
  color: #999;
}
.btn{
  width: 80%;
  border: 2rpx solid #ff552e;
  height: 40rpx;
  line-height: 40rpx;
  border-radius: 20rpx;
  color: #ff552e;
  text-align: center;
  margin-top: 2rpx;
}