page{
  min-height: 100%;
  background-color: #f5f5f5;
}
.root,.detail_wrap{
  width: 100%;
  height: 100%;
  overflow: hidden;
  box-sizing: border-box;
  font-size: 28rpx;
}
.root{
  padding-bottom: 100rpx;
}
.title{
  text-indent: 10rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1px solid #eee;
  font-size: 30rpx;
  background-color: #fff;
}
.detail_content{
  width: 100%;
  padding:10rpx;
  box-sizing: border-box;
  background-color: #fff;
}
.pos_tags{
  width: 100%;
  padding: 8rpx 0;
  display: flex;
  display: -webkit-flex;
  box-sizing: border-box;
}
.pos_tags text{
  flex: 1;
}
.pos_tags .color{
  color: red;
}
.update_time{
  margin: 12rpx 0;
  font-size: 24rpx;
  color: #666;
}
.company_info{
  width: 100%;
  box-sizing: border-box;
  height: 160rpx;
  padding:15rpx;
  display: flex;
  display: -webkit-flex;
  background-color: #fff;
  margin:20rpx 0;
  overflow: hidden;
}
.company_info .item_img{
  width: 130rpx;
  height: 130rpx;
   margin-right: 15rpx; 
}
.company_info .info{
  width: 90%;
  padding-right: 10rpx;
}
.c_title{
  height: 40rpx;
  line-height: 40rpx
}
.tags{
  height: 80rpx;
  margin-top: 10rpx;
}
.tags view{
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  color: #666;
  overflow: hidden;
}
.common_moudle{
  overflow: hidden;
  background-color: #fff;
  margin-top: 20rpx;
}
.common_moudle .top_title{
  height: 70rpx;
  line-height: 70rpx;
  border-bottom: 1px solid #eee;
  text-indent: 10rpx;
  font-weight: 600;
}
.top_title .color{
  color:#009ee5;
}
.common_moudle_content{
  padding:15rpx;
  color: #666;
}
.common_item{
  height: 50rpx;
  line-height: 50rpx;
  color: #666;
}
.bottom_nav{
  width: 100%;
  height: 100rpx;
  background-color: rgba(255, 255, 255, 0.9);
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  display: -webkit-flex;
}
.collect_wrap{
  flex: 1;
}
.collect_wrap view{
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
}
.collect_wrap view image,.collect_wrap view text{
  vertical-align: middle;
}
.apply_wrap{
  flex: 2;
}
.applt_btn{
  width: 96%;
  height:80rpx;
  line-height: 80rpx;
  background-color: #009ee5;
  color: #fff;
  text-align: center;
  font-size: 28rpx;
  margin:10rpx auto;
  border-radius: 4rpx;
}