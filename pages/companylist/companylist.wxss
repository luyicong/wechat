.root,.company_list{
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.list_item{
  display: flex;
  display: -webkit-flex;
  height: 150rpx;
  border-bottom: 1px solid #eee;
  width: 100%;
  box-sizing: border-box;
  padding:15rpx;
}
.item_img{
  width: 120rpx;
  height: 120rpx;
  background-color: #ddd;
  margin-right: 10rpx;
}
.item_img img{
  width: 100%;
  height: 100%;
}
.list_item .info{
  flex: 1;
}
.list_item .title{
  font-size: 30rpx;
  height: 60rpx;
  line-height: 60rpx;
}
.tags{
  height: 50rpx;
  line-height: 50rpx;
  font-size: 24rpx;
  color: #666;
}
.tags>text{
  margin-right: 20rpx;
}
.tags .color{
  color: red;
}